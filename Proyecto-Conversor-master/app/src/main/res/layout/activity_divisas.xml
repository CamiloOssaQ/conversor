<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2d6b3">

    <Button
        android:id="@+id/botoniniciodivisas"
        android:layout_width="136dp"
        android:layout_height="69dp"
        android:backgroundTint="#bf8450"
        android:text="@string/volver_al_inicio"
        android:textColor="#f2d6b3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="27dp" />

    <EditText
        android:id="@+id/divisaacambiar"
        android:layout_width="252dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/ingrese_la_divisa"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="342dp" />

    <Spinner
        android:id="@+id/elegirtipodecambio"
        android:layout_width="198dp"
        android:layout_height="31dp"
        android:textAlignment="center"
        app:guidelineUseRtl="true"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="293dp" />

    <EditText
        android:layout_width="206dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="text"
        android:text="Convertir de:"
        android:textAlignment="center"
        app:guidelineUseRtl="false"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="251dp" />

    <Button
        android:id="@+id/calcular"
        android:layout_width="104dp"
        android:layout_height="63dp"
        android:backgroundTint="#bf8450"
        android:text="Button"
        android:textColor="#f2d6b3"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="389dp" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="213dp"
        android:layout_height="57dp"
        android:text="Resultado:"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="501dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
